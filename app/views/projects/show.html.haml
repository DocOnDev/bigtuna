= link_to("Edit", edit_project_path(@project))

= link_to("Build now", build_project_path(@project))

%table#listing
  %thead
    %tr
      %th{:colspan => 2}= @project.name
  %tbody
    - @builds.each do |build|
      %tr{:class => build.status, :id => dom_id(build)}
        %td
          %tt= link_to(build.display_name, build_path(build))
        %td.info
          = ("author: " + link_to(build.author, "mailto:#{build.email}")).html_safe
          %br
          = "message: " + truncate(build.commit_message, :length => 35)
          %br
          = "scheduled at: " + build.scheduled_at.strftime("%Y-%m-%d %H:%M")
        %td.info
          = form_tag(build_path(build), :method => "DELETE") do
            %button{:type => "submit"} Delete
