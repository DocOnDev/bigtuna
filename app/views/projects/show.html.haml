#listing
  %h2= @project.name
  %tbody
    - @builds.each do |build|
      %div{:class => "#{build.status} project", :id => dom_id(build)}
        .name
          %p= link_to(build.display_name, build_path(build, :stderr => build.status == Build::STATUS_OK ? nil : 1))
        - if build.commit_data?
          %table.value_list
            %tr
              %td.title Author
              %td.value= mail_to(build.author, build.email + " <" + build.author + ">")
            %tr
              %td.title Message
              %td.value= truncate(build.commit_message, :length => 55)
        .info
          = form_tag(build_path(build), :method => "DELETE") do
            %button{:type => "submit"} Delete

- content_for :sidebar do
  %li= link_to("Edit", edit_project_path(@project), :class => "black_button")
  %li= link_to("Remove project", remove_project_path(@project), :class => "black_button")
  %li= link_to("Build now", build_project_path(@project), :class => "black_button")
