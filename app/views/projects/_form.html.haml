%div
  = f.label(:name)
  %br
  = f.text_field(:name, :class => 'textfield')
%div
  = f.label(:steps)
  %br
  = f.text_area(:steps, :class => 'textarea')
%div
  = f.label(:vcs_type)
  %br
  = f.select(:vcs_type, BigTuna::VCS_BACKENDS.map { |value, klass| [klass::NAME, value] }, :class => 'textfield')
%div
  = f.label(:vcs_source)
  %br
  = f.text_field(:vcs_source, :class => 'textfield')
%div
  = f.label(:vcs_branch)
  %br
  = f.text_field(:vcs_branch, :class => 'textfield')
%div
  = f.label(:recipients)
  %br
  = f.text_field(:recipients, :class => 'textfield')
%div
  = f.label(:max_builds)
  %br
  = f.text_field(:max_builds, :class => 'textfield')
%div
  = f.label(:hook_name)
  %br
  = f.text_field(:hook_name, :class => 'textfield')
  %br
  %span.hint
    POST to
    %tt http://big.tuna.host/hooks/:hook_name:
    to build automatically
%div
  = f.submit(f.object.new_record? ? "Create" : "Update")
