#listing
  %h2 Projects
  = "No projects yet." unless !@projects.empty?
  - @projects.each do |project|
    %ol
      %li{:class => "#{project.status} project", :id => dom_id(project)}
        .name
          %p= link_to(project.name, project_path(project))
        - if project.recent_build
          %table.value_list
            = render :partial => "builds/build_data", :locals => {:build => project.recent_build}
            - if project.stability
              %tr
                %td.title Stability
                %td.value= format_stability(project.stability)
        .info
          - if ! project.first?
            = link_to("Up", arrange_project_path(project, :up => true))
          - if ! project.last?
            = link_to("Down", arrange_project_path(project, :down => true))

- content_for :sidebar do
  =link_to("new project", new_project_path, :class => 'black_button')
