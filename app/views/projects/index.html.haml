#listing
  %h2 Projects
  = "No projects yet." unless !@projects.empty?
  - @projects.each do |project|
    %ol
      %li{:class => "#{project.status} project", :id => dom_id(project)}
        .updown
          = link_to_if(!project.first?, "&uarr;".html_safe, arrange_project_path(project, :up => true))
          %br
          = link_to_if(!project.last?, "&darr;".html_safe, arrange_project_path(project, :down => true))
          %br
        %h3= link_to(project.name, project_path(project))
        - if project.recent_build
          %table.value_list
            = render :partial => "builds/build_data", :locals => {:build => project.recent_build}
            - if project.stability
              %tr
                %td.title Stability
                %td.value= format_stability(project.stability)
        - else
          %table.value_list
            %tr
              %td.title Not built yet

- content_for :sidebar do
  =link_to("new project", new_project_path, :class => 'black_button')
